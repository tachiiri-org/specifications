{
  "include": [
    "claims.tenant_id",
    "claims.actor.actor_id",
    "route.service",
    "route.resource",
    "route.property",
    "route.operation",
    "x-idempotency-key",
    "body_hash"
  ],
  "body_hash": {
    "algorithm": "sha256",
    "input": "canonical_json(request_body)",
    "only_for_content_types": [
      "application/json"
    ],
    "on_other_content_types": "hash_raw_bytes",
    "max_body_bytes_to_hash": 10485760
  },
  "on_body_too_large": "reject_with_error.too_large_body_to_hash"
}