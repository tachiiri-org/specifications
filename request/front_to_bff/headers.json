{
  "untrusted_by_default": true,
  "consume": {
    "allowlist": [
      "accept",
      "content-type",
      "origin",
      "cookie",
      "traceparent",
      "user-agent"
    ]
  },
  "drop": [
    "authorization",
    "x-forwarded-for",
    "x-real-ip",
    "cf-connecting-ip",
    "cf-ray",
    "x-request-id",
    "x-amzn-trace-id",
    "forwarded"
  ],
  "hop_by_hop_drop": [
    "connection",
    "keep-alive",
    "proxy-authenticate",
    "proxy-authorization",
    "te",
    "trailer",
    "transfer-encoding",
    "upgrade"
  ],
  "normalize": {
    "lowercase_header_names": true
  },
  "generate_on_bff": {
    "x-request-id": {
      "required": true,
      "overwrite_if_present": true
    }
  },
  "passthrough_to_downstream": {
    "allowlist": [
      "traceparent",
      "user-agent"
    ]
  },
  "response_headers": {
    "set": {
      "x-request-id": "from_generated_request_id"
    }
  }
}