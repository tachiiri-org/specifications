{
  "methods": {
    "allowed": [
      "POST",
      "OPTIONS"
    ],
    "rpc_style": "operation_catalog_over_http"
  },
  "routing": {
    "base_path": "/adapter",
    "path_template": "/adapter/{service}/{resource}/{property}/{operation}",
    "segments": {
      "service": "string_non_empty",
      "resource": "string_non_empty",
      "property": "string_non_empty",
      "operation": "string_non_empty"
    }
  },
  "content_types": {
    "accepted_request": [
      "application/json"
    ],
    "require_json_on_methods": [
      "POST"
    ],
    "default_response": "application/json; charset=utf-8"
  },
  "auth": {
    "mode": "internal_assertion_only",
    "assertion_header": "x-internal-assertion"
  },
  "idempotency": {
    "supported": true,
    "key_header": "x-idempotency-key",
    "required_for_operations": [
      "create",
      "update",
      "delete",
      "move",
      "share",
      "unshare"
    ]
  },
  "catalog": {
    "declared_operations_ref": "adapter/operation_map.json",
    "implemented_operations_ref": "adapter/implemented_operations.json",
    "selection_rule": "request must match implemented_operations; otherwise not_found"
  },
  "observability": {
    "trace_header": "traceparent",
    "request_id_header": "x-request-id"
  },
  "errors": {
    "shape_ref": "response/error.json",
    "catalog_ref": "request/internal_gateway_to_adapter/errors.json"
  }
}