{
  "scope": "Request-level observability and control metadata",
  "version": 1,
  "request_id": {
    "header": "X-Request-Id",
    "generated_by": "first_internet_facing_component_if_missing",
    "propagation": "downstream",
    "overwrite_if_present": false,
    "echo_to_response": true
  },
  "tracing": {
    "traceparent": {
      "supported": true,
      "propagation": "passthrough",
      "generate_if_missing": false
    }
  },
  "rate_limit": {
    "enabled": true,
    "keys": [
      "actor_id",
      "tenant_id"
    ],
    "default_policy": {
      "requests_per_minute": 600
    }
  },
  "idempotency": {
    "supported": true,
    "header": "Idempotency-Key",
    "capability": "services may enforce idempotency requirements",
    "default_applies_to_methods": [
      "POST",
      "PUT",
      "PATCH"
    ],
    "note": "For operation-centric adapter routes, whether Idempotency-Key is required must be declared per operation (e.g., in adapter/<service>/operations.json) rather than inferred from HTTP method alone."
  },
  "logging": {
    "required_fields": [
      "request_id",
      "operation_id",
      "actor_id",
      "tenant_id",
      "status",
      "latency_ms"
    ],
    "optional_fields": [
      "service",
      "resource",
      "property",
      "operation"
    ]
  }
}