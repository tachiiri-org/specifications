{
  "request_limits": {
    "max_body_bytes": 2097152,
    "max_header_bytes": 16384
  },
  "timeouts_ms": {
    "connect": 2000,
    "overall": 15000
  },
  "retry": {
    "enabled": true,
    "max_attempts": 3,
    "retry_on_status": [
      429,
      500,
      502,
      503,
      504
    ],
    "retry_on_network_error": true,
    "backoff": {
      "strategy": "exponential",
      "base_delay_ms": 200,
      "max_delay_ms": 2000,
      "jitter": "full"
    }
  },
  "concurrency": {
    "max_inflight_per_target": 8
  }
}