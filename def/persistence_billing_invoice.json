{
  "spec_version": 1,
  "breaking_change": false,
  "effective_from": "2026-02-04",
  "storage_name": "billing_primary_store",
  "category": "Billing",
  "tenant_scoped": true,
  "resource": {
    "service": "billing",
    "resource": "invoice"
  },
  "encryption": {
    "at_rest": {
      "required": true,
      "mode": "provider_managed_or_kms"
    },
    "in_transit": {
      "required": true,
      "mode": "tls"
    }
  },
  "retention": {
    "days": 365
  },
  "deletion": {
    "mode": "hybrid",
    "logical_delete": {
      "required": true
    },
    "physical_delete": {
      "required": true,
      "eligible_after_days": 365
    }
  },
  "backup_restore": {
    "backup_enabled": true,
    "restore_expectation": "tenant_isolation_preserved"
  },
  "pii_secret_exclusion": {
    "mode": "required",
    "strategy": "tokenized_reference_only"
  }
}