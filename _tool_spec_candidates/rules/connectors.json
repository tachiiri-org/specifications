          ]
        },
        "timeouts": {
          "timeout_ms_max": 900
        },
        "retry": {
          "max_attempts_max": 2,
          "retry_on_status": [
            429,
            500,
            502,
            503,
            504
          ],
          "retry_on_network_error": true,
          "backoff_ms_max_total": 300
        },
        "rate_limit": {
          "notes": "respect provider limits; implement backoff on 429",
          "prefer_client_side_throttle": true
        },
        "errors": {
          "mapping_required": true,
          "error_code_namespace": "external_google_drive"
        },
        "audit": {
          "required_by_default": true
        },
        "data": {
