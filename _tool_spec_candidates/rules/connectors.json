{
  "spec_version": 1,
  "breaking_change": false,
  "effective_from": "2026-02-04",
  "connectors": {
    "items": [
      {
        "connector_id": "github",
        "display_name": "GitHub API",
        "auth": {
          "mode": "oauth2",
          "token_refresh": "required",
          "scopes_hint": [
            "repo",
            "read:user"
          ]
        },
        "timeouts": {
          "timeout_ms_max": 900
        },
        "retry": {
          "max_attempts_max": 2,
          "retry_on_status": [
            429,
            500,
            502,
            503,
            504
          ],
          "retry_on_network_error": true,
          "backoff_ms_max_total": 300
        },
        "rate_limit": {
          "notes": "respect provider limits; implement backoff on 429",
          "prefer_client_side_throttle": true
        },
        "errors": {
          "mapping_required": true,
          "error_code_namespace": "external_github"
        },
        "audit": {
          "required_by_default": true
        },
        "data": {
          "default_classification": "sensitive"
        }
      },
      {
        "connector_id": "google_drive",
