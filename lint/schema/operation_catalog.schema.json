{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "spec_version": {
      "type": "integer",
      "minimum": 1
    },
    "breaking_change": {
      "type": "boolean"
    },
    "effective_from": {
      "type": "string",
      "pattern": "^(\\d{4}-\\d{2}-\\d{2}|release-[A-Za-z0-9._-]+)$"
    },
    "catalog": {
      "type": "object",
      "properties": {
        "operation_key_format": {
          "type": "string",
          "minLength": 1
        },
        "items": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "key": {
                "type": "string",
                "minLength": 1
              },
              "service": {
                "type": "string",
                "minLength": 1
              },
              "resource": {
                "type": "string",
                "minLength": 1
              },
              "property": {
                "type": "string",
                "minLength": 1
              },
              "operation": {
                "type": "string",
                "minLength": 1
              },
              "classification": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string"
                }
              },
              "connector_id": {
                "type": "string",
                "minLength": 1
              },
              "schema": {
                "type": "object",
                "properties": {
                  "required": {
                    "type": "boolean"
                  },
                  "path": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "required": [
                  "required",
                  "path"
                ],
                "additionalProperties": false
              },
              "data": {
                "type": "object",
                "properties": {
                  "classification": {
                    "type": "string",
                    "enum": [
                      "none",
                      "pii",
                      "sensitive"
                    ]
                  }
                },
                "required": [
                  "classification"
                ],
                "additionalProperties": false
              },
              "audit": {
                "type": "object",
                "properties": {
                  "required": {
                    "type": "boolean"
                  }
                },
                "required": [
                  "required"
                ],
                "additionalProperties": false
              },
              "idempotency": {
                "type": "object",
                "properties": {
                  "required": {
                    "type": "boolean"
                  }
                },
                "required": [
                  "required"
                ],
                "additionalProperties": false
              },
              "authz": {
                "type": "object",
                "properties": {
                  "mode": {
                    "type": "string"
                  },
                  "required_scopes_all_of": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "minItems": 1
                  },
                  "required_roles_any_of": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "minItems": 1
                  }
                },
                "required": [
                  "mode",
                  "required_scopes_all_of",
                  "required_roles_any_of"
                ],
                "additionalProperties": false
              },
              "slo": {
                "type": "object",
                "additionalProperties": true
              }
            },
            "required": [
              "key",
              "service",
              "resource",
              "property",
              "operation",
              "classification",
              "connector_id",
              "schema",
              "data",
              "audit",
              "idempotency",
              "authz"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "operation_key_format",
        "items"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "spec_version",
    "breaking_change",
    "effective_from",
    "catalog"
  ],
  "additionalProperties": false
}
